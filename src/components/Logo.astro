---
import { Image } from 'astro:assets';

interface Props {
  className?: string;
  size?: 'sm' | 'md' | 'lg';
}

const { className = '', size = 'md' } = Astro.props;

const sizeClasses = {
  sm: 'h-6 w-auto',
  md: 'h-8 w-auto',
  lg: 'h-10 w-auto'
};
---

<Image
  src="/assets/logos/abby-logo.png"
  alt="Abby Logo"
  class={`${sizeClasses[size]} ${className}`}
  width={200}
  height={50}
  loading="eager"
/>